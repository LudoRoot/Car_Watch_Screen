<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="innovationcenter.car_watch.controllers.BTActivity">
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:columnCount="2"
    android:rowCount="3"
    android:padding="10dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:text="Voulez-vous vous connecter Ã  un appareil ?"/>
    <Button
        android:id="@+id/listDevButton"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_height="wrap_content"
        android:text="Known devices"/>
    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_height="wrap_content"
        android:text="Exit"/>
    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_height="wrap_content"
        android:text="Search for Devices"/>

</GridLayout>
</android.support.constraint.ConstraintLayout>