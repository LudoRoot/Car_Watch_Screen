<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hd_wallpaper"
    tools:context="innovationcenter.car_watch.controllers.MainActivity">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="5"
        android:padding="10dp"
        android:rowCount="4">

        <TextClock
            android:id="@+id/simpleDigitalClock"
            android:layout_width="157dp"
            android:layout_height="28dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"

            android:autoSizeMaxTextSize="20dp"
            android:gravity="center_horizontal"
            android:textSize="90dp" />

        <Button
            android:id="@+id/activity_main_call_btn"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/baseline_phone_black_36dp"
            android:padding="30dp"

            />

        <Button
            android:id="@+id/activity_main_radio_btn"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/baseline_radio_black_36dp"
            android:padding="30dp" />

        <Button
            android:id="@+id/activity_main_movie_btn"
            android:layout_column="4"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/baseline_movie_black_36dp"
            android:padding="30dp" />

        <Button
            android:id="@+id/activity_main_nav_btn"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/baseline_navigation_black_36dp"
            android:padding="30dp" />

        <Button
            android:id="@+id/activity_main_bt_btn"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/baseline_bluetooth_black_36dp"
            android:padding="30dp" />

        <Button
            android:id="@+id/activity_main_act6_btn"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/baseline_touch_app_black_36dp"
            android:padding="30dp" />

        <Button
            android:id="@+id/activity_main_act7_btn"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/baseline_touch_app_black_36dp"
            android:padding="30dp" />

        <Button
            android:id="@+id/activity_main_act8_btn"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@drawable/baseline_touch_app_black_36dp"
            android:padding="30dp" />

        <Button
            android:id="@+id/activity_main_act9_btn"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@drawable/baseline_touch_app_black_36dp"
            android:padding="30dp" />

        <Button
            android:id="@+id/activity_main_conf_btn"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@drawable/baseline_configuration_icon"
            android:padding="30dp" />
    </GridLayout>


</android.support.v7.widget.LinearLayoutCompat>