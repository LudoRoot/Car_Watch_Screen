<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/danse"
    tools:context="RadioActivity">


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        design:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        design:layout_constraintEnd_toEndOf="parent"
        design:layout_constraintStart_toStartOf="parent"
        design:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:background="@null"
            android:scaleType="fitCenter"
            design:srcCompat="@drawable/equalizer" />

        <Button
            android:id="@+id/exitButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:background="@drawable/home_music"
            android:scaleType="fitCenter"
            design:srcCompat="@drawable/home_music" />

        <!--<Button-->
        <!--android:id="@+id/activity_main_call_btn"-->
        <!--android:layout_column="2"-->
        <!--android:layout_columnWeight="1"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:layout_row="0"-->
        <!--android:layout_rowWeight="1"-->
        <!--android:background="@drawable/baseline_phone_black_36dp"-->
        <!--android:padding="30dp"-->

        <!--/>-->
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="585dp"
        android:layout_height="54dp"
        design:layout_constraintBottom_toTopOf="@+id/relativeLayout3"
        design:layout_constraintEnd_toEndOf="parent"
        design:layout_constraintHorizontal_bias="0.0"
        design:layout_constraintStart_toStartOf="parent"
        design:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

        <TextView
            android:id="@+id/frequency"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="300dp"
            android:text="103.3"
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/mhz"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="330dp"
            android:text="MHz"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF"
            android:textSize="50dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        design:layout_constraintBottom_toTopOf="@+id/Relative_play"
        design:layout_constraintEnd_toEndOf="parent"
        design:layout_constraintStart_toStartOf="parent"
        design:layout_constraintTop_toBottomOf="@+id/relativeLayout">


        <TextView
            android:id="@+id/singer"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="singer"
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/radio"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:text="radio"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Relative_play"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:layout_marginTop="248dp"
        design:layout_constraintBottom_toTopOf="@+id/linearLayout"
        design:layout_constraintEnd_toEndOf="parent"
        design:layout_constraintHorizontal_bias="0.0"
        design:layout_constraintStart_toStartOf="parent"
        design:layout_constraintTop_toTopOf="parent"
        design:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/play_music"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="fitCenter"
            design:srcCompat="@drawable/play_white" />


        <ImageButton
            android:id="@+id/play_backward"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="138dp"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="fitCenter"
            design:srcCompat="@drawable/skip_previous" />

        <ImageButton
            android:id="@+id/play_forward"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="137dp"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="fitCenter"
            design:srcCompat="@drawable/skip_next" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="?android:attr/colorBackground"
        android:orientation="horizontal"
        design:layout_constraintBottom_toBottomOf="parent"
        design:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/preset1"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:scaleType="fitStart"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Mem 1"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/preset2"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="@drawable/buttonshape"
            android:cropToPadding="false"
            android:elevation="0dp"
            android:scaleType="fitStart"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Mem 2"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/preset3"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:scaleType="fitStart"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Mem 3"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/preset4"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:scaleType="fitStart"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Mem 4"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/preset5"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:scaleType="fitStart"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Mem 5"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/preset6"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:scaleType="fitStart"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Mem 6"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>